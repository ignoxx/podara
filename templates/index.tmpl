{{ define "main"}}
        <header class="hero text-center">
            <h1 class="text-3xl font-bold mb-4">unleash the power of your voice with <span class="text-white">pod</span><span class="text-blue-400">ara</span></h1>
        </header>

        <section id="features" class="grid grid-cols-1 sm:grid-cols-2 gap-4 justify-center mx-auto max-w-3xl px-4">

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-bolt text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Fast and Developer-Friendly API</h3>
                    <p class="text-lg mb-6">Enjoy a blazingly-fast API with developer-friendly documentation and easy integration.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-rss text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Podcast RSS Feed Compatibility</h3>
                    <p class="text-lg mb-6">Generate an RSS feed compatible with major podcast hosting platforms like Apple Podcasts and  Spotify</p>
                </div>
            </div>

                       <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-microphone-alt text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">AI-Powered Transcription</h3>
                    <p class="text-lg mb-6">Effortlessly convert your podcast audio into accurate, text-based transcriptions using advanced AI technology.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-newspaper text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Automated Blog Post Generation</h3>
                    <p class="text-lg mb-6">Instantly transform your podcast episodes into engaging blog posts with the help of AI algorithms.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-palette text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Intelligent Thumbnail and Icon Generation</h3>
                    <p class="text-lg mb-6">Create captivating thumbnails and icons for your podcast and individual episodes effortlessly, powered by cutting-edge AI technology.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-music text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Background Music Generation</h3>
                    <p class="text-lg mb-6">Elevate the listening experience of your episodes with AI-generated background music that perfectly complements your content.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-magic text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Optimized Metadata Suggestions</h3>
                    <p class="text-lg mb-6">Receive smart suggestions for titles, descriptions, and other metadata to maximize the discoverability and appeal of your podcasts and episodes.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-server text-3xl text-blue-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Bring Your Own Hosting Provider</h3>
                    <p class="text-lg mb-6">Host your audio files on your preferred hosting provider for maximum control.</p>
                </div>
            </div>

        </section>


        <section id="contact" class="contact mt-8 text-center">
            <p class="text-2xl font-bold mb-4">Contact Us</p>
            <form class="max-w-md mx-auto">
                <div class="flex flex-wrap -mx-2">
                    <div class="w-full px-2">
                        <input type="text" placeholder="Your Name"
                            class="w-full bg-gray-700 text-white rounded-lg py-3 px-4 placeholder-gray-500" required>
                    </div>
                    <div class="w-full px-2 mt-4">
                        <input type="email" placeholder="Your Email"
                            class="w-full bg-gray-700 text-white rounded-lg py-3 px-4 placeholder-gray-500" required>
                    </div>
                    <div class="w-full px-2 mt-4">
                        <textarea placeholder="Your Message"
                            class="w-full bg-gray-700 text-white rounded-lg py-3 px-4 placeholder-gray-500" rows="5"
                            required></textarea>
                    </div>
                </div>
                <div class="mt-6 text-center">
                    <button type="submit"
                        class="bg-blue-400 hover:bg-opacity-80 text-white font-bold py-2 px-6 rounded-full cta-btn">Submit</button>
                </div>
            </form>
        </section>

{{ end }}
