{{ define "main"}}
        <header class="hero text-center">
            <h1 class="text-3xl font-bold mb-4">unleash the power of your voice with podara</h1>
        </header>

        <section id="features" class="grid grid-cols-1 sm:grid-cols-2 gap-2 justify-center mx-auto max-w-3xl px-4">

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-lock text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Podcast Encryption</h3>
                    <p class="text-lg mb-6">Ensure the security and privacy of your podcasts with built-in encryption.
                    </p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-key text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Individual Episode Encryption</h3>
                    <p class="text-lg mb-6">Encrypt specific podcast episodes for added confidentiality.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-bolt text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Fast and Developer-Friendly API</h3>
                    <p class="text-lg mb-6">Enjoy blazingly-fast API responses and easily integrate Podara into your
                        applications.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-ad text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Monetize Podcasts with Ads</h3>
                    <p class="text-lg mb-6">Possibility to monetize podcasts and episodes with integrated ads, with
                        support for multiple ad networks.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">

                    <i class="fas fa-file-audio text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Automatic Audio Conversion</h3>
                    <p class="text-lg mb-6">Podara automatically converts your audio files to various formats for
                        compatibility.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">

                    <i class="fas fa-share-alt text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Distributed to Major Platforms</h3>
                    <p class="text-lg mb-6">Your podcasts will be distributed to all major podcast platforms for maximum
                        reach.</p>
                </div>
            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-chart-bar text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Detailed Analytics</h3>
                    <p class="text-lg mb-6">Get detailed insights into your podcast performance with comprehensive
                        analytics.</p>
                </div>

            </div>

            <div class="feature-card flex-shrink-0 bg-gray-700 rounded-lg mx-auto">
                <div class="max-w-md p-8">
                    <i class="fas fa-users text-3xl text-green-400 mb-4"></i>
                    <h3 class="text-2xl font-bold mb-2">Audience Metrics</h3>
                    <p class="text-lg mb-6">Understand your audience better with demographic and listening behavior
                        data.
                    </p>
                </div>
            </div>


        </section>


        <section id="contact" class="contact mt-8 text-center">
            <p class="text-2xl font-bold mb-4">Contact Us</p>
            <form class="max-w-md mx-auto">
                <div class="flex flex-wrap -mx-2">
                    <div class="w-full px-2">
                        <input type="text" placeholder="Your Name"
                            class="w-full bg-gray-700 text-white rounded-lg py-3 px-4 placeholder-gray-500" required>
                    </div>
                    <div class="w-full px-2 mt-4">
                        <input type="email" placeholder="Your Email"
                            class="w-full bg-gray-700 text-white rounded-lg py-3 px-4 placeholder-gray-500" required>
                    </div>
                    <div class="w-full px-2 mt-4">
                        <textarea placeholder="Your Message"
                            class="w-full bg-gray-700 text-white rounded-lg py-3 px-4 placeholder-gray-500" rows="5"
                            required></textarea>
                    </div>
                </div>
                <div class="mt-6 text-center">
                    <button type="submit"
                        class="bg-green-400 hover:bg-opacity-80 text-white font-bold py-2 px-6 rounded-full cta-btn">Submit</button>
                </div>
            </form>
        </section>

{{ end }}
